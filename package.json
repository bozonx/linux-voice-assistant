{
  "name": "linux-voice-assistant-ui",
  "version": "1.0.0",
  "private": true,
  "main": "dist-electron/main.js",
  "scripts": {
    "start": "tsc && electron ./electron",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"tsc && electron .\"",
    "electron:build": "vue-tsc --noEmit && vite build && electron-builder",
    "electron:preview": "electron ."
  },
  "dependencies": {
    "electron-store": "^10.0.1",
    "mic": "^2.1.2",
    "vue": "^3.4.15",
    "vue-router": "^4.2.5",
    "ws": "^8.18.2"
  },
  "devDependencies": {
    "@types/electron": "^1.4.38",
    "@types/node": "^20.11.16",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-vue": "^5.0.3",
    "concurrently": "^8.2.2",
    "electron": "^28.1.4",
    "electron-builder": "^24.9.1",
    "terser": "^5.41.0",
    "typescript": "^5.3.3",
    "vite": "^6.3.5",
    "vite-plugin-electron": "^0.15.5",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vue-tsc": "^1.8.27"
  },
  "build": {
    "appId": "com.linux-voice-assistant.app",
    "productName": "Linux Voice Assistant",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    }
  }
}
